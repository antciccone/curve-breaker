<%= render partial: 'shared/nav' %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">All Students</h1>
                <div class="input-group custom-search-form">
                    <input type="text" class="form-control" placeholder="Search for a student by name">
                    <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
                </div>
            </li>
            <br>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Grade</th>
                    <th>ACT</th>
                    <th>SAT</th>
                </tr>
            </thead>
            <tbody>
              <% @user.each do |student| %>
                <tr>
                    <td class="student-name"><%= link_to student.name, admin_student_path(student) %></td>
                    <td><%= student.email %></td>
                    <td>9735257892</td>
                    <td><%= student.address%></td>
                    <td><%= student.grade %></td>
                    <% student.scores.each do |score| %>
                    <td> <%= score.sat %></td>
                    <td> <%= score.act %></td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
<%= render partial: 'shared/footer' %>
