<%= render partial: 'shared/nav' %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">All Students</h1>
            <div class="btn-group date-block btn-group-justified font-small dropdown" data-toggle="buttons">
                <label  href="#current" data-toggle="tab" class="btn btn-default previous text-right font-small semiBold" title="Previous Day" style="font-size:12px;">
                  Current Students
                </label>
                <label href="#past" data-toggle="tab" class="btn date-buttons btn-default text-right semiBold" style="font-size:12px;" >
                  Past Students
                </label>
                <label  href="#leads" data-toggle="tab" class="btn date-buttons btn-default text-right semiBold" style="font-size:12px;" >
                  Leads
                </label>
                <label href="#all" data-toggle="tab"  class="btn date-buttons btn-default text-right semiBold" style="font-size:12px;">
                  All Students
                </label>
            </div>
            <br>
                <div class="input-group custom-search-form">
                    <input type="text" class="form-control" placeholder="Search for a student by name">
                    <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
                </div>
            </li>
            <br>
        </div>
    </div>
    <div id="myTabContent" class="tab-content">
    <div  role="tabpanel" class="tab-pane active" id="current">
      <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Address</th>
                      <th>Grade</th>
                      <th>Status</th>
                  </tr>
              </thead>
              <tbody>
                <% @current.each do |student| %>
                  <tr>
                      <td class="student-name"><%= link_to student.name, admin_student_path(student) %></td>
                      <td><%= student.email %></td>
                      <td>9735257892</td>
                      <td><%= student.address%></td>
                      <td><%= student.grade %></td>
                      <td><%= student.status %></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
    <div  role="tabpanel" class="tab-pane" id="past">
