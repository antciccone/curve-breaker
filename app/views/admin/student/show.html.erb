<%= render partial: 'shared/nav' %>

<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header"><%= @student.name %>: <%= @student.grade %> Grade</h1>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>Email</th>
              <th>Phone</th>
              <th>Address</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @student.email %></td>
              <td>9735257892</td>
              <td>42 brookside drive sparta nj</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>ACT</th>
              <th>SAT</th>
            </tr>
          </thead>
          <tbody>
            <% @student.scores.each do |score| %>
            <tr>
              <td> <%= score.sat %></td>
              <td> <%= score.act %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
