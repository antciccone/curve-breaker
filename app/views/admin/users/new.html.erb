<%= render partial: 'shared/nav' %>

<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-4">
      <br>
      <center><h2>For a Teacher</h2></center>
      <%= form_for [:admin, @user] do |f| %>
      <div class="form">
        <form class="register-form">
          <%= f.text_field :name, placeholder: "name" %>
          <%= f.text_field :email, placeholder: "email" %>
          <!-- <%= f.text_field :rate, placeholder: "hourly rate" %> -->
          <%= f.password_field :password, placeholder: "password" %>
          <%= f.password_field :password_confirmation, placeholder: "password confirmation" %>
          <%= f.text_field :phone, placeholder: "phone" %>
          <%= f.select :role, ['teacher'] %>
        </form>
          <%= f.submit "Create Account" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-4">
        <br>
        <center><h2>For a Student</h2></center>
        <%= form_for [:admin, @user] do |f| %>
        <div class="form">
          <form class="register-form">
            <%= f.text_field :name, placeholder: "name" %>
            <%= f.text_field :email, placeholder: "email" %>
            <%= f.password_field :password, placeholder: "password" %>
            <%= f.password_field :password_confirmation, placeholder: "password confirmation" %>
            <%= f.text_field :phone, placeholder: "phone" %>
            <%= f.text_field :address, placeholder: "address" %>
            <%= f.text_field :grade, placeholder: "grade" %>
            <%= f.text_field :parent_name, placeholder: "Parent name" %>
            <%= f.text_field :parent_number, placeholder: "Parent number" %>
            <%= f.text_field :parent_email, placeholder: "Parent email" %>
            <%= f.select :role, ['student'] %>
            <%= f.select :status, ['past', 'lead', 'current'], :selected => "current"   %>
          </form>
            <%= f.submit "Create Account" %>
            <% end %>
          </div>
        </div>
        <div class="col-lg-4">
          <br>
          <center><h2>For a Super Admin</h2></center>
          <%= form_for [:admin, @user] do |f| %>
          <div class="form">
            <form class="register-form">
              <%= f.text_field :name, placeholder: "name" %>
              <%= f.text_field :email, placeholder: "email" %>
              <%= f.password_field :password, placeholder: "password" %>
              <%= f.password_field :password_confirmation, placeholder: "password confirmation" %>
              <%= f.text_field :phone, placeholder: "phone" %>
              <%= f.text_field :address, placeholder: "address" %>
              <%= f.select :role, ['super-admin']  %>
            </form>
              <%= f.submit "Create Account" %>
              <% end %>
            </div>
          </div>
    </div>
  </div>
