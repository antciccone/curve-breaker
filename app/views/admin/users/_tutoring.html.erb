<h3>Total Tutoring Hours: 12</h3>
<br>
<div class="container">
    <div class="row">
        <div class="timeline-centered">
          <% @user.find_teacher_lessons(current_user).each do |lesson| %>
          <article class="timeline-entry">
              <div class="timeline-entry-inner">
                  <div class="timeline-icon bg-success">
                      <i class="entypo-feather"></i>
                  </div>
                  <div class="timeline-label">
                      <h2>
                          <a href="">Teacher: <%= lesson.teacher.name %> </a> |
                          <span> <%= lesson.created_at %> </span>
                      </h2>
                      <h5>Notes/Topics Covered</h5>
                      <p><%= lesson.notes %>
                      <h5>Homework</h5>
                      <p><%= lesson.homework %>
                      </p>
                  </div>
              </div>
          </article>
          <% end %>
            <article class="timeline-entry begin">
                <div class="timeline-entry-inner">
                    <div class="timeline-icon" style="-webkit-transform: rotate(-90deg); -moz-transform: rotate(-90deg);">
                        <i class="entypo-flight"></i>
                        <span data-toggle="modal" data-target="#myModal">+</span>
                    </div>
                </div>
            </article>
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add A Lesson</h4>
                        </div>
                        <div class="modal-body">
                          <div class="panel-body new-user">
                                  <%= form_for @lesson do |f| %>
                                  <div class="form-group">
                                    <%= f.label :length, class: "control-lable col-md-4 required-field" %>
                                    <%= f.text_field :length, class: "input-md textinput textInput form-control" %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :notes, class: "control-lable col-md-4 required-field" %>
                                    <%= f.text_area :notes, class: "input-md textinput textInput form-control" %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :homework, class: "control-lable col-md-4 required-field" %>
                                    <%= f.text_area :homework, class: "input-md textinput textInput form-control" %>
                                  </div>
                                  <div class="">
                                    <%= f.hidden_field :teacher_id, :value => current_user.find_teacher.id %>
                                    <%= f.hidden_field :user_id, :value => @user.id %>
                                  </div>
                                    <div class="form-group">
                                      <%= f.submit class: "btn btn-warning"%>
                                    </div>
                                  <% end %>
                                </div>
                              </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
